set nocompatible
filetype off
set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()
Plugin 'VundleVim/Vundle.vim'
Plugin 'jelera/vim-javascript-syntax'
"Plugin 'guns/vim-clojure-static'
"Plugin 'tpope/vim-classpath'
"Plugin 'tpope/vim-fireplace'
Plugin 'kien/rainbow_parentheses.vim'
Plugin 'vim-airline/vim-airline'
Plugin 'vim-airline/vim-airline-themes'
Plugin 'sheerun/vim-polyglot'
Plugin 'wakatime/vim-wakatime'
Plugin 'tpope/vim-fugitive'

"Plugin 'kristijanhusak/vim-hybrid-material'
"Plugin 'rdavison/Libertine'
"Plugin 'sickill/vim-monokai'
Plugin 'flazz/vim-colorschemes'
Plugin 'the-mikedavis/firebird'
call vundle#end()
filetype plugin indent on

let g:libertine_Sunset = 1
" from my local file in `.colors`
"colorscheme firebird
colorscheme onedark

"   Clear highlighting on escape in normal mode
nnoremap <esc> :noh<return><esc>
nnoremap <esc>^[ <esc>^[
"   Switch to spaces of width 2
set tabstop=2
set shiftwidth=2
set expandtab
set hlsearch
set nu "show line numbers
"set ruler "   Show the column and such
syntax on
" fish conflicts with Vundle.vim
" use zsh when using PluginInstall
set shell=/usr/local/bin/fish
"set shell=/usr/local/bin/zsh

let g:airline_theme = "hybrid"

"   For makefiles, turn tabs back on
autocmd FileType make setlocal noexpandtab

let g:rbpt_colorpairs = [
    \ ['brown',       'RoyalBlue3'],
    \ ['Darkblue',    'SeaGreen3'],
    \ ['darkgray',    'DarkOrchid3'],
    \ ['darkgreen',   'firebrick3'],
    \ ['darkcyan',    'RoyalBlue3'],
    \ ['darkred',     'SeaGreen3'],
    \ ['darkmagenta', 'DarkOrchid3'],
    \ ['brown',       'firebrick3'],
    \ ['gray',        'RoyalBlue3'],
    \ ['black',       'SeaGreen3'],
    \ ['darkmagenta', 'DarkOrchid3'],
    \ ['Darkblue',    'firebrick3'],
    \ ['darkgreen',   'RoyalBlue3'],
    \ ['darkcyan',    'SeaGreen3'],
    \ ['darkred',     'DarkOrchid3'],
    \ ['red',         'firebrick3'],
    \ ]
let g:rbpt_max = 16
let g:rbpt_loadcmd_toggle = 0

au VimEnter * RainbowParenthesesToggle
au Syntax * RainbowParenthesesLoadRound

au BufReadPost *.pl set syntax=prolog

if exists('+colorcolumn')
  set colorcolumn=80
else
  au BufWinEnter * let w:matchadd('ErrorMsg', '\%>80v.\+', -1)
endif

set backspace=indent,eol,start
